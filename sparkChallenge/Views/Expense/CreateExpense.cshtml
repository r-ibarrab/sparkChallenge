<form asp-controller="Expense" asp-action="CreateExpense" method="post" class="form">

    <div class="form-group mt-3 mb-3">
        <label for="title">Título</label>
        <input form="title" placeholder="Raqueta de padel" class="form-control" />
    </div>

    <div class="form-group  mt-3 mb-3">
        <label for="company">Establecimiento</label>
        <input form="company" placeholder="Palestra" class="form-control" />
    </div>

    <div class="form-group  mt-3 mb-3">
        <label for="amount">Cantidad</label>
        <input form="amount" placeholder="3500" type="number" class="form-control" />
    </div>

    <div class="form-group  mt-3 mb-3">
        <label for="date">Fecha</label>
        <input form="date" placeholder="08/07/2022" type="date" class="form-control" />
    </div>
    <div class="form-group  mt-3 mb-3">
        <label for="folio">Folio</label>
        <input form="folio" placeholder="1234" type="number" class="form-control" />
    </div>
    <div class="form-group  mt-3 mb-3">
        <button type="submit">Crear</button>
    </div>


</form>
